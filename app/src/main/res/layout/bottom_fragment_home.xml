<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.homepage.home.HomeFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/div_top_tab" />

        <View
            android:id="@+id/div_top_tab"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:alpha="0.6"
            android:background="@color/color_ffdfdfdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout_top" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout_top"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/color_ff000000"
            app:tabTextColor="@color/color_ff333333" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>